@model AspNetUsers
@{
    ViewData["Title"] = "Profile";
}
<div class="w-100">
    @await Component.InvokeAsync("Header", new { ShowRightSection = false, ShowQuestions = false, StaticHeading = true, HeadingText = "" })
    <div class="profile-section mt-3 bg-white upload-wrapper">
        <div class="col-lg-6 col-md-10 col-12 mx-auto pb-3">
            <h3 class="text-center">Profile</h3>
            <div class="row">
                <div class="col-md-12 mt-5 ">
                    <div class="py-3 px-3 bg-white box-border">
                        <div class="profile-title mb-3">@Model.FirstName.ToString() @Model.LastName.ToString() </div>
                        <div class="d-flex justify-content-between profile-mobile">
                            <p class=" profile-email-mobile"><b>Email Address:</b> @Model.Email</p>
                            <p><a asp-action="updateemail" asp-area="patientportal" class=" profile-edit-btn ml-1 text-black" asp-controller="patient" title="Edit email address">EDIT</a></p>
                        </div>
                        <div>
                            <p class="mb-3"><b>Phone Number:</b> @Model.PhoneNumber</p>
                        </div>
                        <div>
                            <p class="m-0"><b>Date of Birth:</b> @Model.Dob.Value.ToString("MM/dd/yyyy")</p>
                        </div>
                        <a asp-action="ChangePassword" asp-controller="Patient" asp-area="PatientPortal" class="large-teal-btn mt-4 ">Change Password</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

