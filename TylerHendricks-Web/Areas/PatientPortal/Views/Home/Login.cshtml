@model LoginModel
@{
    ViewData["Title"] = "Patient Login";
}
<div id="UpdateContentDiv" style="width:100%">
    @await Component.InvokeAsync("Header", new { ShowRightSection = false, ShowQuestions = false, StaticHeading = false, HeadingText = "" })
    <input type="hidden" value="@TempData["alert"]" id="hiddenAlert" />
    <section>
        <div class="container-fluid">
            <div class="row patientLogin">
                <div class="col-md-6">
                    <img src="~/Images/logo.png" />
                </div>
                <div class="col-md-6 d-flex loginbg">
                    <div class="patientLogInDetails">
                        <h3 class="text-center headingText">Patient Log In</h3>
                        <form id="" method="post" asp-action="Login" asp-controller="Home" asp-area="PatientPortal">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="form-group">
                                <div class="inputControl position-relative">
                                    <i class="fa fa-user position-absolute" aria-hidden="true"></i><input asp-for="Email" class="form-control br-0 pl-4 pr-4" type="text" />
                                </div>
                                <label>Email Address</label>
                            </div>
                            <div class="form-group">
                                <div class="inputControl position-relative">
                                    <i class="fa fa-lock position-absolute" aria-hidden="true"></i><input asp-for="Password" class="form-control br-0 pl-4 pr-4" type="password" />
                                </div>
                                <label>Password</label>
                            </div>
                            <input type="hidden" asp-for="TimezoneOffSet" id="hdnTimeZone" />
                            <input type="hidden" asp-for="IsDayLightSaving" id="hdnDayLightSaving" />
                            <button type="submit" onclick="SetTimeZone();" class="btn btn-theme btn-block">Log In</button>
                            <a asp-action="ForGotPassword" asp-controller="Home" asp-area="PatientPortal">Forgot your password?</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
@section Scripts
{
    <script src="~/JS/Login.js?v=1.0.0.0"></script>
}

