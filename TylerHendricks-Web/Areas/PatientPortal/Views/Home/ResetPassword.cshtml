@model ResetPasswordModel
@{
    ViewData["Title"] = "ResetPassword";
}
<div id="UpdateContentDiv" style="width:100%">
    @await Component.InvokeAsync("Header", new { ShowRightSection = false, ShowQuestions = false, StaticHeading = false, HeadingText = "" })
    <input type="hidden" value="@TempData["alert"]" id="hiddenAlert" />
    <section>
        <div class="container-fluid">
            <div class="row patientLogin">
                <div class="col-md-6">
                    <img src="~/Images/logo.png" />
                </div>
                <div class="col-md-6 d-flex loginbg">
                    <div class="patientLogInDetails">
                        <h3 class="text-center headingText">Reset Password</h3>
                        <input type="hidden" asp-for="TokenId" />
                        <input type="hidden" asp-for="Token" />
                        <form method="post">
                            <div class="form-group">
                                <span asp-validation-for="ChnagePass" class="text-danger"></span>
                                <div class="inputControl position-relative">
                                    <i class="fa fa-user position-absolute" aria-hidden="true"></i>
                                    <input asp-for="ChnagePass" class="form-control br-0 pl-4" type="password" id="pass" />
                                </div>
                                <label>Password</label>
                            </div>
                            <div class="form-group">
                                <span asp-validation-for="ConfirmChnagePass" class="text-danger"></span>
                                <div class="inputControl position-relative">
                                    <i class="fa fa-user position-absolute" aria-hidden="true"></i>
                                    <input asp-for="ConfirmChnagePass" class="form-control br-0 pl-4" id="confirmPass" type="password" />
                                </div>
                                <label>Confirm Password</label>
                            </div>
                            <button type="submit" class="btn btn-theme btn-block">Reset Password</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
@section Scripts
{
    <script src="~/JS/Login.js"></script>
}