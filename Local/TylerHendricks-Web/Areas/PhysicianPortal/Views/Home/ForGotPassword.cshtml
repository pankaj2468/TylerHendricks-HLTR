@model ForgotModel
@{
    ViewData["Title"] = "Fogot Password";
}
<div id="UpdateContentDiv" style="width:100%">
    <input type="hidden" value="@TempData["alert"]" id="hiddenAlert" />
    <section class="col-12">
        <div class="container-fluid">
            <div class="row patientLogin">
                <div class="col-md-6">
                    <img src="/Images/logo.png" />
                </div>
                <div class="col-md-6 d-flex">
                    <div class="patientLogInDetails">
                        <h3 class="text-center headingText">Forgot Password</h3>
                        <form method="post">
                            <div class="form-group">
                                <div asp-validation-summary="All" class="text-danger"></div>
                                <div class="inputControl position-relative">
                                    <i class="fa fa-user position-absolute" aria-hidden="true"></i><input asp-for="Email" class="form-control br-0" type="text" />
                                </div>
                                <label>Email Address</label>
                            </div>
                            <button type="submit" class="btn btn-theme btn-block">Reset Password</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
@section Scripts
{
    <script src="~/JS/Login.js?v=1.0.0.0"></script>
}
