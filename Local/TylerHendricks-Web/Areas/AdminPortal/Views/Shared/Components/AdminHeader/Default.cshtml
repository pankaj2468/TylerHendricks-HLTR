<section class="col-12 header">
    <div class="container-fluid nav-bar">
        <div class="row nav-mobile align-items-center justify-content-between">
            <div class="col-lg-4 col-md-4 mb-3 d-none d-md-block">
                <div class="logoWrapper ">
                    <a href="http://hendrxhealth.com/" target="_blank" title="Hendrx Health">
                        <img src="~/Images/logo.png">
                    </a>
                </div>
            </div>
            <div class="col-lg-4 col-md-3 text-center d-none d-md-block mb-3">
                @if (ViewBag.StaticHeading)
                {
                    <div class="admin-console-heading">
                        <p class="themeColor fs-18 mb-0"><b><h4>@ViewBag.HeadingText</h4></b></p>
                    </div>
                }
            </div>
            <div class="col-lg-4 col-md-5 nav-wrapper">
                @if (ViewBag.userName != null)
                {
                    <div class="user-sec d-none d-md-block">
                        <div class="btn-group mb-1">
                            <div class="d-flex justify-content-end align-items-center">
                                <div>
                                    <span class="user-txt">
                                        Welcome, @ViewBag.userName
                                    </span>
                                </div>
                                <div>
                                    <a asp-action="LogOut" asp-area="AdminPortal" asp-controller="Home" class="logout-txt ml-4">Log out</a>
                                </div>
                            </div>
                        </div>
                        <div class="header-btns d-flex justify-content-end" id="headerdiv">
                            <a class="database-btn" onclick="MenuTabSelect()" asp-action="PatientInfo" asp-controller="Home" asp-area="AdminPortal">DATABASE</a>
                            <a class="consultation-btn" onclick="MenuTabSelect()" asp-action="Consultation" asp-controller="Home" asp-area="AdminPortal">CONSULTATIONS</a>
                            <a class="consultation-btn" onclick="MenuTabSelect()" asp-action="Notification" asp-controller="Home" asp-area="AdminPortal">NOTIFICATIONS</a>
                            <a class="consultation-btn" onclick="MenuTabSelect()" asp-action="State" asp-controller="Home" asp-area="AdminPortal">SERVICE STATES</a>
                        </div>
                    </div>
                }
                <nav class="d- block text-center d-md-none navbar d-flex justify-content-between toggle-navbar navbar-expand-lg navbar-light custom-padding nav-margin">
                    <div class="col-md-12">
                        <a class="navbar-brand logoWrapper" href="http://hendrxhealth.com/" target="_blank" title="Hendrx Health"> <img src="~/Images/logo.png"></a>
                    </div>
                    @if (ViewBag.userName != null)
                    {
                        <button class="navbar-toggler custom-padding bg-toggle" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                            <div class="hamburger" id="hamburger-1">
                                <span class="line"></span>
                                <span class="line"></span>
                                <span class="line"></span>
                            </div>
                        </button>
                        <div class="collapse shadow-sm nav-position nav-background navbar-collapse mt-3" id="navbarNav">
                            <ul class="navbar-nav">
                                <li class="nav-item active">
                                    <a class="nav-link" href="#"> <p class="mb-0">Welcome, <span>@ViewBag.userName</span></p> <span class="sr-only">(current)</span></a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link nav-profile-header" asp-action="PatientInfo" asp-controller="Home" asp-area="AdminPortal" style="color: #1C2541"><b>DATABASE</b></a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link nav-profile-header" asp-action="Consultation" asp-controller="Home" asp-area="AdminPortal" style="color: #1C2541"><b>CONSULTATIONS</b></a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link nav-profile-header" asp-action="Notification" asp-controller="Home" asp-area="AdminPortal" style="color: #1C2541"><b>NOTIFICATIONS</b></a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link nav-profile-header" asp-action="State" asp-controller="Home" asp-area="AdminPortal" style="color: #1C2541"><b>SERVICE STATES</b></a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-action="LogOut" asp-area="AdminPortal" asp-controller="Home" style="color: #1C2541"><b>LOG OUT</b></a>
                                </li>
                            </ul>
                        </div>
                    }
                </nav>
