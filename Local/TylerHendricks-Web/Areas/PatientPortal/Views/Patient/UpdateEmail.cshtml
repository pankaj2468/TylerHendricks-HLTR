@model UpdateEmailModel
@{
    ViewData["Title"] = "UpdateEmail";
}
<div style="width: 100%;">
    @await Component.InvokeAsync("Header", new { ShowRightSection = false, ShowQuestions = false, StaticHeading = true, HeadingText = "Update Email".ToUpper() })
    <div class="outer">
        <div class="mb-4">
            <div class="container my-3">
                <div class="row justify-content-center px-3 br-0">
                    <div class="col-md-4 card shadow br-0 ">
                        <div class="row">
                            <div class="col-md-12 p-0">
                                <h5 class="text-center change-password-background">UPDATE EMAIL</h5>
                            </div>
                        </div>
                        <form id="UpdateEmailForm"
                              method="post"
                              data-ajax="true"
                              data-ajax-loading="#Loader"
                              data-ajax-complete="RequestCompleteEmail"
                              data-ajax-success="RequestSuccessEmail"
                              data-ajax-failure="RequestFailureEmail"
                              asp-action="UpdateEmail" asp-controller="Patient">
                            <input type="hidden" asp-for="IsOTPValid" id="IsOTPValid" />
                            <input type="hidden" asp-for="IsValidEmail" id="IsValidEmail" />
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group step1">
                                <label class="control-label">Enter a new email address</label>
                                <input asp-for="Email" class="form-control br-0" type="email" />
                                <span asp-validation-for="Email" class="text-danger font-weight-bold"></span>
                                <span class="hide-select font-weight-bold mt-2" id="EditEmail" title="Edit Email Address" style="cursor:pointer;"><i class="fa fa-edit"></i></span>
                            </div>
                            <div class="form-group step1">
                                <input type="submit" id="btncheck" value="Submit" class="btn-theme2 fs-22 customBtn br-0" />
                            </div>
                            <div class="form-group hide-select step2">
                                <label class="control-label font-weight-bold">OTP</label>
                                <input asp-for="OTP" type="tel" class="form-control" oninput="Numeric(this)" />
                                <span asp-validation-for="OTP" class="text-danger"></span>
                            </div>
                            <div class="form-group hide-select step2">
                                <input type="submit" id="btnupdate" value="Update" class="btn-theme2 fs-22 customBtn" />
                            </div>
                            <div class="mb-2">
                                <a asp-action="Profile" asp-controller="Patient" asp-area="PatientPortal" class="theme-color-4"> Cancel</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts
{
    <script src="~/JS/UpdateEmail.js?v=1.0.0.0"></script>
}