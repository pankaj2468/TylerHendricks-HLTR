@model Questions
@{
    ViewData["Title"] = "ExitConsultation";
}

@await Component.InvokeAsync("Header", new { ShowRightSection = false, ShowQuestions = false, StaticHeading = false, HeadingText = "" })
<section class="col-12 select-wrapper">
    <div class="container-fluid">
        <div class="row signIn">
            <div class="col-md-12 mt-2 text-center text-md-left pl-0">
                <a class="pre select-state-iconmargin ml-0" asp-action="StartConsultation" asp-controller="Home" asp-area="PatientPortal">
                    <img src="~/Images/arrow-alt.png" alt=""> Previous
                </a>
            </div>
            <div class="col-12 d-flex align-items-center flex-column">
                <div class="col-3"></div>
                <div class="d-flex justify-content-around flex-column mt-3">
                    <p class="text-center midContent">
                        @Html.Raw(Model.Description)
                    </p>
                </div>
                <div class="col-3"></div>
            </div>
        </div>
    </div>
</section>