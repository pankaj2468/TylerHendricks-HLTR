@model Questions
@{
    ViewData["Title"] = "Consultation";
}

@await Component.InvokeAsync("Header", new { ShowRightSection = false, ShowQuestions = false, StaticHeading = false, HeadingText = "" })
<section class="col-12 select-wrapper">
    <div class="container-fluid">
        <div class="row mainQs">
            <div class="col-md-12 mt-2 mb-4 text-center text-md-left pl-0">
                <a class="pre select-state-iconmargin ml-0" asp-controller="Home" asp-action="SelectState" asp-area="PatientPortal">
                    <img src="~/Images/arrow-alt.png" alt=""> Previous
                </a>
            </div>
            <div class="col-12 d-flex align-items-center flex-column">
                <form method="post">
                    <div class="d-flex justify-content-around flex-column mt-5" style="width:100%">
                        <p class="text-center midContent">
                            @Html.Raw(Model.Description)
                        </p>
                        <div class="text-center w90 row">
                            <input type="hidden" asp-for="Id" value="@Model.Id" />
                            <input type="hidden" asp-for="Response" id="hdnResponse" value="@Model.Response" />
                            <input type="hidden" asp-for="NextQuestionId" id="hdNextQuestion" value="@Model.NextQuestionId" />
                            <input type="hidden" asp-for="PreviousQuestionId" id="hdPrevQuestion" value="@Model.PreviousQuestionId" />
                            <input type="hidden" asp-for="Answer" id="hdAnswer" value="@Model.Answer" />
                            <input type="hidden" asp-for="ConsultationCategoryId" value="@Model.ConsultationCategoryId" />
                            <div class="btnWrap d-flex justify-content-center w-100 btn-wrp">
                                <button type="submit" class="btn-theme2 fs-22 mr-2" id="btn-pd" onclick="SetResponseDef(this, true,@Model.NextQuestionId);">YES</button>
                                <button type="submit" class="btn-theme2 fs-22 mr-2 btn-mr" onclick="SetResponseDef(this, false,@Model.NextQuestionId1);">NO</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
@section Scripts {
    <script>
        function SetResponseDef(current, response, questionId) {
            $('#hdnResponse').val(response);
            $('#hdNextQuestion').val(questionId);
            $('#hdAnswer').val($(current).html());
        }
    </script>
}

